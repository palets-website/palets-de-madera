<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="preload" href="{{ '/fonts/Montserrat-Regular.woff2' | url }}" as="font" crossorigin>
    <link rel="preload" href="{{ '/fonts/Roboto-Regular.woff2' | url }}" as="font" crossorigin>
    <link rel="preload" href="{{ '/fonts/Roboto-bold.woff2' | url }}" as="font" crossorigin>
    <link rel="preload" href="{{ '/fonts/Roboto-italic.woff2' | url }}" as="font" crossorigin>
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="icon" href="{{ 'favicon.ico' | url }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/img/favicon/apple-touch-icon.png' | url }}">
    <link rel="icon" type="image/png" href="{{ '/img/favicon/favicon-32x32.png' | url }}" sizes="32x32">
    <link rel="icon" href="{{ '/img/favicon/favicon.svg' | url }}" type="image/svg+xml">
    <link rel="manifest" href="{{ '/site.webmanifest' | url }}">
  </head>
  <body>
    {% include "header.njk" %}

    <main class="page {% if templateClass %} {{ templateClass }}{% endif %}">
      {{ content | safe }}
    </main>

    {% include "footer.njk" %}

    <!-- Current page: {{ page.url | url }} -->
    <script src="{{ '/js/main.js' | url }}"></script>
  </body>
</html>
